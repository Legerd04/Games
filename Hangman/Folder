import random
def play():
        with open (r"C:\Users\User\.vscode\My Codes\states.txt", "r")as file:
           all_words = file.read().upper().splitlines()
        prop = random.choice(all_words)
        guessed_letters = []
        tries = 10
        print ("We shall play hangman. You have 10 guesses for the word. Hint: The word will be and Indian state/UT.")
        while tries>0:
                display_word = ' '.join([letter if letter.upper() in guessed_letters or letter == " " else "_" for letter in prop])
                print(f"Word: {display_word}")
                if '_' not in display_word:
                 print ("You won. Congractulations!")
                 break
                guess = input("Guess a letter:").upper()
                if guess in guessed_letters:
                 print ("You already guessed it")
                elif guess in prop:
                 guessed_letters.append(guess)
                 print("Correct.")
                else:
                 tries = tries-1 
                 print(f"Number of guesses left: {tries}")
        if(tries == 0):
         print(f"ðŸ’€ You lost. The word was: {prop}")
play()
while True:
        if input("Do you want to continue? (yes/no): ").strip().lower() != "yes":
         print("Thanks for playing!")
         break
        else:
         print("Let's do it")
         play()

